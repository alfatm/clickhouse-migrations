{
  "name": "clickhouse-migrations",
  "version": "1.2.0",
  "description": "ClickHouse Migrations",
  "bin": {
    "clickhouse-migrations": "lib/cli.js"
  },
  "main": "lib/migrate.js",
  "types": "lib/migrate.d.ts",
  "type": "commonjs",
  "exports": {
    ".": {
      "types": "./lib/migrate.d.ts",
      "default": "./lib/migrate.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=20",
    "bun": ">=1.2.23",
    "npm": "please-use-bun",
    "yarn": "please-use-bun",
    "pnpm": "please-use-bun"
  },
  "packageManager": "bun@1.2.23",
  "private": false,
  "license": "MIT",
  "author": "VVVi",
  "repository": {
    "type": "git",
    "url": "https://github.com/VVVi/clickhouse-migrations.git"
  },
  "bugs": {
    "url": "https://github.com/VVVi/clickhouse-migrations/issues"
  },
  "homepage": "https://github.com/VVVi/clickhouse-migrations#readme",
  "scripts": {
    "preinstall": "npx only-allow bun",
    "build": "rm lib/*; tsc",
    "test": "jest --config jestconfig.json",
    "test:unit": "jest --config jestconfig.json --testPathPatterns=\"\\.(unit)\\.test\\.ts$\"",
    "test:integration": "jest --config jestconfig.json --testPathPatterns=\"\\.(integration)\\.test\\.ts$\"",
    "test:e2e": "jest --config jestconfig.json --testPathPatterns=\"\\.e2e\\.test\\.ts$\"",
    "format": "biome format --write ./src",
    "format:tests": "biome format --write ./tests",
    "lint": "biome lint ./src",
    "check": "biome check --write ./src",
    "prepare": "bun run build",
    "prepublishOnly": "bun test && bun run check",
    "preversion": "bun run check",
    "version": "bun run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "@clickhouse/client": "^1.14.0",
    "commander": "^14.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "clickhouse-migrations",
    "clickhouse-migration",
    "clickhouse-migrate",
    "clickhouse",
    "migrations",
    "migration",
    "migrate",
    "cli"
  ]
}
